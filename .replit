modules = ["nodejs-20", "web", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["killall", "tree"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Next.js Dev Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Code Auditor"

[[workflows.workflow]]
name = "Next.js Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Code Auditor"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd code-auditor && ANTHROPIC_API_KEY=$ANTHROPIC_API_KEY npm start"
waitForPort = 3001

[[ports]]
localPort = 3000
externalPort = 4200

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 3100
externalPort = 3003

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 42259

[[ports]]
localPort = 42533
externalPort = 3002

[[ports]]
localPort = 45989
externalPort = 3000

[deployment]
run = ["npm", "start"]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
[env]
NODE_ENV = "development"
NEXT_RUNTIME_LOG = "1"
NEXT_TELEMETRY_DISABLED = "1"
NEXT_DISABLE_SWC_WATCH = "1"
